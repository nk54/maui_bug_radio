<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Radio.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*,*,*">

        <RadioButton
            Grid.Row="1"
            Grid.Column="1"
            Content="Without FontSize : ALIGNED with ellipse on Windows" />

        <RadioButton
            Grid.Row="2"
            Grid.Column="1"
            Content="With FontSize : NOT aligned with ellipse on Windows"
            FontSize="Title" />

        <RadioButton Grid.Row="3" Grid.Column="1">
            <RadioButton.Content>
                <Label FontSize="Title" Text="With Label : NOT aligned with ellipse on Windows" />
            </RadioButton.Content>
        </RadioButton>

    </Grid>

</ContentPage>
